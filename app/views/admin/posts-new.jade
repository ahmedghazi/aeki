extends ../layout

prepend content
    
    section.submit
  
        form(name="submit", action="/api/posts/", method="post")
            
            h3= title

            div.row
                input(type="text", class="form-control", name="title", placeholder="Titre", value="")
            
            div.row
                input(type="text", class="form-control", name="url" placeholder="Url" value="")

            div.row
                input(type="text", class="form-control", name="texte" placeholder="Texte" value="")
        

            div.row
                label(for="form-file") File input
                input(type="file" class="form-control-file" id="form-file") 
            div.row
                div.checkbox
                    label
                        input(type="checkbox" value="cb") 
                        | Checkbox
            div.row
                input(type="hidden" name="status" value="0")
                input(type="submit", class="btn btn-lg btn-primary btn-block", value="Submit")


                
                