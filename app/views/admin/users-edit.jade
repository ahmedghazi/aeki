extends ../layout

block header
    header
        h2.pull-left= title
        p.pull-right Salutations #{user.first_name} #{user.last_name}
        div.clearfix

        ul.nav.nav-pills
            li.active
                a(href="/admin/dates") Chefs
            li
                a(href="/admin/dates") Date
                
prepend content
    
    section.submit
  
        form(name="submit", action="/api/user/", method="post")
            
            h3= title

            div.row
                input(type="text", class="form-control", name="first_name", placeholder="Pr√©nom", value="#{chef.first_name}")
            
            div.row
                input(type="text", class="form-control", name="last_name" placeholder="Nom" value="#{chef.last_name}")

            div.row
                input(type="email", class="form-control", name="email" placeholder="Email" value="#{chef.email}")
        

            div.row
                label(for="form-file") File input
                input(type="file" class="form-control-file" id="form-file") 
            div.row
                div.checkbox
                    label
                        input(type="checkbox" value="cb") 
                        | Checkbox
            div.row
                input(type="hidden" name="status" value="0")
                input(type="submit", class="btn btn-lg btn-primary btn-block", value="Update")


                
                