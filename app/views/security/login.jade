extends ../layout

prepend content
    section
        article
            div.createbox
                if errors
                    - errors.forEach(function(error){
                        p.text-danger #{error.message}
                    - });
                form(action="/security/login", method="POST")
                    div.form-group
                        label(for="username")
                        input.form-control(type="text", name="username", id="username", placeholder="User name", value="a@e.fr")
                    div.form-group
                        label(for="password")
                        input.form-control(type="password", name="password", id="password", placeholder="Password")
                    
                    button.btn.btn-primary Login